<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_card"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="4dp"
    android:background="@drawable/item_card_background">

    <ImageView
        android:id="@+id/iv_item_card"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:contentDescription="@string/item_image_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_card"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>